<h1>Listing friends</h1>


<table>
  <tr>
    <th>firstname</th>
    <th>lastname</th>
    <th>phone</th>
    <th>email</th>
    <th>imei</th>
    <th>image</th>
  </tr>

<% @friends.each do |friend| %>
  <tr>
    <td><%= friend.firstname %></td>
    <td><%= friend.lastname %></td>
    <td><%= friend.phone %></td>
    <td><%= friend.email %></td>
    <td><%= friend.imei %></td>
    <td><%= image_tag friend.image.url(:thumb) %></td>
    <td><%= link_to 'Show', friend %></td>
    <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
    <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Friend', new_friend_path %>
